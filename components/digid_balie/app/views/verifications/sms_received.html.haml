%h1= t('activation_code_received')

= extended_form_for(@sms_received_form, url: finish_verification_path) do |form|
  = form.header

  = form.hidden_field(:present, value: true)

  = form.radio_buttons(:sms_received, [[t('no_resend_sms'), false], [t('yes_sms_received'), true]], label: t('activation_code'), required: true)

  = actions do
    = action_submit(t('finish_request'))
    = action_link(t('cancel'), root_path, :right)
