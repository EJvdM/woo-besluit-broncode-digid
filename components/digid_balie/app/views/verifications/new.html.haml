%h1= t('retrieve_request')

- for news_item in @news_items
  - if news_item["name_nl"].present?
    = block_with_icon do
      %h2= news_item["name_nl"]
      = markdown(news_item["body_nl"])

= extended_form_for(@form, url: verifications_path) do |form|
  = form.header

  = form.citizen_service_number_field(autofocus: true, required: true)
  = form.code_field(:front_desk_code, code: 'B', required: true)

  = actions do
    = action_submit(t('next'))
    = action_link(t('cancel'), root_path, :right)
