%h1 Nieuw eID AT-verzoek

.clear
= form_for @at_request, data: {initial: Eid::AtRequest.initial} do |f|
  = render 'shared/errors', model: @at_request
  = field f.label(:document_type), f.select(:document_type, Eid::DocumentType::ALL)
  = field f.label(:authorization), f.select(:authorization, Eid::PolymorphType::ALL)
  = field f.label(:sequence_no), f.text_field(:sequence_no, maxlength: 5, style: "width: 10em;")
  = field f.label(:reference), f.select(:reference, [])
  = render 'shared/form_actions', model: @at_request
.clear
