.form_wrapper
  %h1 Vraag: #{@question.question}
  .actions_top
    = link_to('Terug naar overzicht', questions_path)
    = link_to('Wijzig vraag', edit_question_path(@question), class: 'edit_button') if can? :update, Question
  .clear
  = field 'Taal', @question.locale if Language.show?
  = field 'Scherm', @question.full_page_name
  = field 'Positie', @question.position
  = field 'Vraag', @question.question
  = field 'Antwoord', sanitized_answer_for(@question)
  .actions
    = link_to('Verwijder vraag', question_path(@question), class: 'delete_button', data: { confirm: t('are_you_sure') }, method: :delete) if can? :destroy, Question
  .clear
