= form_for(@sso_domain, remote: @remote) do |f|
  = render('shared/errors', model: @sso_domain)
  = field(f.label(:name)) do
    = f.text_field :name, required: true
  = field(f.label(:description)) do
    = f.text_area :description, required: true
  = field(f.label(:session_time)) do
    = f.text_field :session_time
  = field(f.label(:grace_period_time)) do
    = f.text_field :grace_period_time
  = field(f.label(:show_current_session_screen)) do
    = f.check_box(:show_current_session_screen, checked: @sso_domain.show_current_session_screen)
  = render('shared/form_actions', model: @sso_domain)
