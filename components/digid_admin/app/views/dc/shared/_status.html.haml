= field f.label(:status, t("services.validity")) do
  = f.fields_for :status do |v|
    = v.hidden_field(:id, value: status&.id)
    = field v.label(:active, t("services.active")), v.check_box(:active, checked: status&.active)
    = field v.label(:active_from, t("services.date_from")) do
      %span.datepicker= v.date_select :active_from, include_blank: true, selected: status&.active_from&.to_date
    = field v.label(:active_until, t("services.date_until")) do
      %span.datepicker= v.date_select :active_until, include_blank: true, selected: status&.active_until&.to_date

