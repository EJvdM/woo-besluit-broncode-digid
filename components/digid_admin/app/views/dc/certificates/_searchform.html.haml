= form_for @certificate, url: search_dc_certificates_path do |f|
  %table.half-width
    %tr
      %th
      %th
      %th
      %th
      %th
      %th
    %tr
      %td= f.label :naam, t("services.certificate.organization.name")
      %td= text_field_tag "dc_certificate[organization][name]", params.dig(:dc_certificate, :organization, :name)
      %td
      %td
      %td
      %td
    %tr
      %td= f.label :aansluiting, t("services.certificate.connection.connection_select")
      %td= check_box_tag "dc_certificate[connection][is_connection]", "true", params.dig(:dc_certificate, :connection, :is_connection)
      %td
      %td
      %td
      %td
    %tr
      %td= f.label :dienst, t("services.certificate.service.service_select")
      %td= check_box_tag "dc_certificate[service][is_service]", "true", params.dig(:dc_certificate, :service, :is_service)
      %td
      %td
      %td
      %td
    %tr
      %td= f.label :fingerprint, t("services.certificate.fingerprint")
      %td= text_field_tag "dc_certificate[certificate][fingerprint]", params.dig(:dc_certificate, :certificate, :fingerprint)
      %td
      %td
      %td
      %td
    %tr
      %td= f.label :kind, t("services.certificate.cert_type")
      %td= select_tag "dc_certificate[certificate][cert_type]", options_for_select([['TLS'], ['SIGNING'], ["ENCRYPTION"]], params.dig(:dc_certificate, :certificate, :cert_type)), include_blank: true
      %td
      %td
      %td
      %td
    %tr
      %td= f.label :active_from, t("services.date_from")
      %td
        %span.datepicker= date_select("dc_certificate[certificate]", :active_from, include_blank: true, selected: params.dig(:dc_certificate, :certificate, :active_from))
      %td= f.label :active_until, t("services.date_until")
      %td
        %span.datepicker= date_select("dc_certificate[certificate]", :active_until, include_blank: true, selected: params.dig(:dc_certificate, :certificate, :active_until))
      %td
      %td
    %tr
