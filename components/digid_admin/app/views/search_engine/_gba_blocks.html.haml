.clear
%h2 BRP blokkeringen
.clear
%table
  %thead
    %tr
      = render 'shared/table_header', headers: %w(blokkering aangemaakt_op geblokkeerd_tot)
      %th.action
  %tbody
    - if gba_blocks
      - gba_blocks.each do |gba_block|
        %tr
          %td= gba_block.blocked_data
          %td= gba_block.created_at
          %td= gba_block.blocked_till
          %td= link_to('Verwijder', gba_block_path(gba_block), class: 'delete_button', method: :delete)
  = table_footer 4 do
    = paginate(gba_blocks, param_name: :gba_block_page)
