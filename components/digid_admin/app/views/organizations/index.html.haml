%h1
  = t("services.organizations.overview")
.actions_top= link_to(t("services.organizations.add_new"), new_organization_path, class: 'new_button') if can? :create, Organization
.clear
.form_wrapper
  = search_form_for @search do |f|
    = f.text_field :name_or_description_or_webservices_name_cont
    = submit_button 'Filter Â»'
%table
  %thead
    %tr
      = render 'shared/table_header', headers: %w(id naam omschrijving webdiensten)
      - if can? :read, Organization
        %th.action
      - if can? :update, Organization
        %th.action
  %tbody
    = render @organizations
  = table_footer 6 do
    = paginate(@organizations)
