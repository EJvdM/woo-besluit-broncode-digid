.form_wrapper
  %h1= t('app_version.headers.new')
  .actions= link_to 'Terug naar het overzicht', app_versions_path
  .clear
  %p= I18n.t('app_version.overview_note')
  %br
  = four_eyes_form_for @app_version do |f|
    = field f.label(:version), f.text_field(:version, required: true)
    = field f.label(:operating_system), f.select(:operating_system, AppVersion::OPERATING_SYSTEMS, { include_blank: true }, { required: true })
    = field f.label(:release_type), f.select(:release_type, AppVersion::RELEASE_TYPES, { include_blank: true }, { required: true })
    = field f.label(:not_valid_before), datepicker_for(f, :not_valid_before)

    .actions
      = render 'shared/form_actions', model: @app_version
    .clear
