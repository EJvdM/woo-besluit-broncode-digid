%h1= I18n.t('kiosk.overview')

%table
  %thead
    = render 'shared/table_header', headers: ['Naam', 'Adres', 'Woonplaats', 'Postcode', 'Aangemaakt', 'Laatst gewijzigd', 'Status']
    %th.action
  %tbody
    - if @kiosks.any?
      = render partial: 'kiosks/kiosk', collection: @kiosks
    - else
      %tr
        %td{ colspan: 3 }= I18n.t('kiosk.no_kiosks')

- if @kiosks_in_review.any?
  %div{class: 'form_wrapper'}
    %h2 Te Accorderen
    = render 'shared/four_eyes_reviews', review_records: @kiosks_in_review, fields: %w(id naam woonplaats postcode human_status), headers: %w(id naam woonplaats postcode status type_wijziging wijziging_aangemaakt_op door opmerkingen)
= show_manager_actions_for(Log::SubjectTypes::KIOSK)
