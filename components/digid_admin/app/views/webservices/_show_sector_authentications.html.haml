= field 'Sectoren' do
  - if !webservice.sector_authentications.nil? && webservice.sector_authentications.any?
    %ol.sectors
      - webservice.sector_authentications.each do |sector_authentication|
        %li
          %span.name= sector_authentication.sector.name
          %span.authorizations
            - unless [Sector.get('bsn'), Sector.get('a-nummer')].include?(sector_authentication.sector_id)
              Registratie:  #{human_boolean(sector_authentication.registration)}<br/>
              Revoceren: #{human_boolean(sector_authentication.revocation)}<br/>
            - if sector_authentication.sector.test?
              Test account: #{human_boolean(sector_authentication.test)}
          .clear
  - else
    Geen
