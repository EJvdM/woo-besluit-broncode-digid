= webservice.present? ? heading_with_icon(t('log_in_at_only'), webservice_name) : heading_with_icon(t('log_in'))

%h2.orange_heading= t("assurance_date_warning_heading_id_check")
%p.margin-bottom-25px
  = t("assurance_date_warning_body_id_check", date: l(webservice.assurance_date, format: :date))

= actions do
  - if mobile_browser?
    = action_button(:download_the_app_id_check, appstore_redirect_url, arrow: true, remote: true, id:"btn", url:@url, timeout: @redirect_timeout)
    = not_now_continue_log_in_button(resist_app_activation_temptation_url, class: "secondary")
  - else
    = action_button(:more_info, app_id_check_info_redirect_url, arrow: true, remote: true, id: "btn", url:@url, timeout: @redirect_timeout)
    = not_now_continue_log_in_button(resist_app_activation_temptation_url, class: "secondary")

= javascript_include_tag("inline/timeout_on_click", nonce: content_security_policy_script_nonce)
