%p= t('email.body.aanhef')

- if Configuration.get_boolean("balie_aanvraag_voor_rni")
  %p= t('email.body.aanvraag_voltooid_buitenland_within_count_days_rni')
  %p= t('email.body.aanvraag_voltooid_buitenland_take_with_you')
  %div
    %span= t('email.body.aanvraag_voltooid_buitenland_take_with_you_item_1', code: @code)
    %br/
    %span= t('email.body.aanvraag_voltooid_buitenland_take_with_you_item_2_rni')
    %br/
    %span= t('email.body.aanvraag_voltooid_buitenland_take_with_you_item_3')
    %br/
    %span= t('email.body.aanvraag_voltooid_buitenland_take_with_you_item_4_rni')
  %p= t('balie_receiving_baliecode_alert_instruction_beware_appointment_rni')
- else
  %p= t('email.body.aanvraag_voltooid_buitenland_within_count_days', days: Configuration.get_int('balie_default_geldigheidsduur_baliecode'))
  %p= t('email.body.aanvraag_voltooid_buitenland_take_with_you')
  %div
    %span= t('email.body.aanvraag_voltooid_buitenland_take_with_you_item_1', code: @code)
    %br/
    %span= t('email.body.aanvraag_voltooid_buitenland_take_with_you_item_2')
    %br/
    %span= t('email.body.aanvraag_voltooid_buitenland_take_with_you_item_3')
  %p= t('balie_receiving_baliecode_alert_instruction_beware_appointment')

- content_for :signature do
  = render partial: 'shared/email_signature_front_desk', formats: [:html]

- content_for :footer do
  = render partial: 'shared/email_footer', formats: [:html]
