%nav.service-menu
  %ul.service-menu-items
    - if Language.show?(@page_name)
      - Language.all.reverse_each do |locale|
        - if locale == I18n.locale.to_s
          %li= link_to(I18n.locale.upcase, {}, { class: "language-menu-item active", "aria-label": I18n.t("current_language"), title: I18n.t("current_language") })
        - else
          %li= link_to(locale.upcase, { locale: locale != "nl" ? locale : nil }.merge(Rack::Utils.parse_nested_query(URI(request.fullpath).query)), class: "language-menu-item", lang: locale, "hreflang": locale, "aria-label": I18n.t("select_language", locale: locale), title: I18n.t("select_language", locale: locale))

