= heading_with_icon(t('activate'))

= extended_form_for(@activationcode, url: activationcode_post_url, method: :put) do |form|

  = form.header(t('activation_code'))

  = form.code_field(:activationcode, code: 'A', label: t('enter_code_received_by_' + activation_code_received_by), required: true, hide_required_indicator: true)

  - if show_did_not_receive_letter?
    = link_to(t('my_digid.links.i_did_not_receive_a_letter'), request_new_letter_activation_start_url, remote: true)
  = form.buttons(:activate, :cancel)

