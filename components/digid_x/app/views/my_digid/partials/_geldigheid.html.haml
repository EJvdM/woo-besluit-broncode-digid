%h2.heading-with-separator= t('my_digid.date_of_expiration')
.row
  .wrap-main
    .col.highlight
      .col.col-name= t('my_digid.account.valid_until')
      .col.col-val
        %button.info-button.info{'aria-label': t('information_boxes.aria_labels.digid_valid_until')}
        - if current_account.expires_at.present?
          %p= l(current_account.expires_at, format: :date)
        - else
          %p= t('inapplicable')
    .col.col-info.info-box
      %p= t('information_boxes.digid_valid_until')
  .col.col-links
    %ul.list-with-arrows
      - unless current_account.deceased?
        %li= link_to(t('suspend_digid'), my_digid_bevestigen_opheffen_digid_url)
