= heading_with_icon(t('revoke_sms_function'))

= block_with_icon do
  %p= t('check_your_password')
  %p
    %strong= t('beware') + ':'
    = t('after_this_you_cant_use_services_that_require_login_with_sms')
  %p= raw(t('do_not_remove_sms'))

= extended_form_for(password_verification, url: my_digid_cancel_two_factor_authentication_url, method: :delete) do |form|

  = form.header

  = form.password_field(:password, label: t('password'), required: true, toggle_text: true, hide_required_indicator: true)

  = actions do
    = action_submit(:revoke)
    = cancel_button(my_digid_url)
