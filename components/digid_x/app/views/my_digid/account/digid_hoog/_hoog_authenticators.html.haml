- if @identity_cards.blank? && @driving_licences.blank?
  .table-row
    .table-cell--overview
      - if show_driving_licence?(current_account.bsn) && show_identity_card?(current_account.bsn)
        = external_link_to(t('my_digid.links.hoog_authenticators_info', authenticator: t('my_digid.links.hoog_authenticator')), 'https://www.digid.nl/identiteitsbewijs')
      - elsif show_identity_card?(current_account.bsn) && !show_driving_licence?(current_account.bsn)
        = external_link_to(t('my_digid.links.hoog_authenticators_info', authenticator: t('my_digid.links.identity_card')), 'https://www.digid.nl/identiteitsbewijs')
      - elsif show_driving_licence?(current_account.bsn)
        = external_link_to(t('my_digid.links.hoog_authenticators_info', authenticator: t('my_digid.links.driving_licence')), 'https://www.digid.nl/identiteitsbewijs')
