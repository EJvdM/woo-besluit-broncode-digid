= heading_with_icon(@page_header)

= flash_alert
= flash_notice

%p= block_with_icon(t('fill_in_your_revocation_code', wid_type: t('document.driving_licence')).html_safe)

= extended_form_for(@intrekkingscode, url: my_digid_licence_revocation_verify_code_url, remote: true) do |form|
  = form.header
  = form.text_field(:intrekkingscode, label: t('wid_revocation_code'), example: t('examples.revocation_code') + " ", required: true, maxlength: 19, hide_required_indicator: true)
  = actions do
    = action_submit(:revoke_wid)
    = cancel_button(my_digid_licence_revocation_cancel_url)

= javascript_include_tag("inline/wid_revoke", nonce: content_security_policy_script_nonce)
